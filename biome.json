{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "**/*.md",
      "!**/node_modules",
      "!**/dist",
      "!**/.next",
      "!**/build"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "all",
      "arrowParentheses": "asNeeded",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": {
          "level": "error",
          "fix": "safe"
        },
        "noUnusedVariables": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["react", "react-dom"],
              ":BLANK_LINE:",
              [":NODE:", ":PACKAGE_WITH_PROTOCOL:", ":PACKAGE:"],
              ":BLANK_LINE:",
              ["@workspace/**"],
              ":BLANK_LINE:",
              ["@/api/**", "@/api"],
              ["@/services/**", "@/services"],
              ["@/store/**", "@/store"],
              ["@/stores/**", "@/stores"],
              ["@/hooks/**", "@/hooks"],
              ["@/components/**", "@/components"],
              ["@/modules/**", "@/modules"],
              ["@/providers/**", "@/providers"],
              ["@/constants/**", "@/constants"],
              ["@/utils/**", "@/utils"],
              ["@/schemas/**", "@/schemas"],
              ["@/types/**", "@/types"],
              ["@/lib/**", "@/lib"],
              ["@/**"],
              ":BLANK_LINE:",
              ":PATH:"
            ],
            "identifierOrder": "natural"
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
